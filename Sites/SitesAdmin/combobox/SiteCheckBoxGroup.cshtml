@model List<int>

@(Html.Kendo().CheckBoxGroup()
    .Name("SiteId") // Matches the property in UserViewModel
    .Items(items =>
    {
        // Loop through available sites (provided via ViewData["Sites"])
        foreach (var site in (IEnumerable<YourNamespace.Models.SiteModel>)ViewData["Sites"])
        {
            items.Add()
                .Label(site.SiteName) // Display the site name
                .Value(site.SiteId.ToString()) // Unique value for each checkbox
                .HtmlAttributes(new { name = $"site_{site.SiteId}" }); // Ensure each checkbox has a name
        }
    })
    .Layout("vertical") // Vertical layout for better visibility
)
