@model List<int>
@(Html.Kendo().MultiSelect()
    .Name("SiteId") // Matches the property name in ViewModel
    .DataTextField("SiteName")
    .DataValueField("SiteId")
    .BindTo((IEnumerable<YourNamespace.Models.SiteModel>)ViewData["Sites"]) // Populate ViewData with site options
    .Placeholder("Select Sites...")
    .TagMode(Kendo.Mvc.UI.TagMode.SingleTag)
    .Filter("startswith")
    .AutoClose(false) // Keeps the dropdown open for multiple selections
    .Events(events => events.Change("onSiteChange")) // Attach change event
)
