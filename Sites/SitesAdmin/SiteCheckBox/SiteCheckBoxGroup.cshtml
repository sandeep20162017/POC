@model List<BCES.Models.Admin.Site>

@(Html.Kendo().CheckBoxGroup()
    .Name("Sites") // Matches the property name in UserViewModel
    .Items(Model.Select(site => new Kendo.Mvc.UI.CheckBoxGroupItem
    {
        Label = site.Sitename,
        Value = site.SiteId.ToString(),
        Checked = site.Checked
    }))
    .Columns(3) // Adjust columns for layout
)
