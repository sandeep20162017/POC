@model List<int>

@(Html.Kendo().CheckBoxGroup()
    .Name("Sites") // Matches the property in UserViewModel
    .Items(items =>
    {
        // Generate checkboxes for all sites from ViewData["Sites"]
        foreach (var site in (IEnumerable<BCES.Models.Admin.Site>)ViewData["Sites"])
        {
            items.Add()
                .Label(site.Sitename) // Display site name as the label
                .Value(site.SiteId.ToString()) // Use SiteId as the value
                .HtmlAttributes(new { name = $"site_{site.SiteId}" }); // Unique name for each checkbox
        }
    })
    .Layout("vertical") // Arrange checkboxes vertically
    .HtmlAttributes(new { style = "display: flex; flex-wrap: wrap;" }) // Optional layout styling
)
