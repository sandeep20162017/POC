@model IEnumerable<BCES.Admin.Models.UserViewModel>

@{
    ViewBag.Roles = new List<RoleModel>
    {
        new RoleModel { RoleId = 1, RoleName = "Admin" },
        new RoleModel { RoleId = 2, RoleName = "User" },
        new RoleModel { RoleId = 3, RoleName = "Guest" }
    };

    ViewBag.Sites = new List<SiteModel>
    {
        new SiteModel { SiteId = 1, SiteName = "Site A" },
        new SiteModel { SiteId = 2, SiteName = "Site B" },
        new SiteModel { SiteId = 3, SiteName = "Site C" }
    };
}

@(Html.Kendo().Grid(Model)
    .Name("UsersGrid")
    .Columns(columns =>
    {
        columns.Bound(p => p.UserName).Editable(true);
        columns.Bound(p => p.SelectedRole).Title("RoleName").EditorTemplateName("RoleDropDown").Editable(true);
        columns.Bound(p => p.SelectedSites).Title("SiteNames").EditorTemplateName("SiteCheckBox").Editable(true);
        columns.Command(command => { command.Edit(); command.Destroy(); }).Width(180);
    })
    .Editable(editable => editable.Mode(GridEditMode.PopUp))
    .Pageable()
    .Sortable()
    .Scrollable()
    .HtmlAttributes(new { style = "height: 550px;" })
    .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .Model(model =>
        {
            model.Id(p => p.UserId);
            model.Field(p => p.UserName).Editable(true);
            model.Field(p => p.SelectedRole).Editable(true);
            model.Field(p => p.SelectedSites).Editable(true);
        })
        .Read(read => read.Action("Read", "Users"))
        .Update(update => update.Action("Update", "Users"))
        .Create(create => create.Action("Create", "Users"))
        .Destroy(destroy => destroy.Action("Destroy", "Users"))
    )
)