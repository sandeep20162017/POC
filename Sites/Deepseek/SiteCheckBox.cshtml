@model string[]

@(Html.Kendo().CheckBoxGroup()
    .Name("SelectedSites")
    .Items(items =>
    {
        foreach (var site in ViewBag.Sites as IEnumerable<BCES.Admin.Models.SiteModel>)
        {
            items.Add().Text(site.SiteName).Value(site.SiteId.ToString());
        }
    })
    .Value(Model)
)