@model string[]

@(Html.Kendo().CheckBoxGroup()
    .Name("SelectedSites")
    .BindTo(ViewBag.Sites as IEnumerable<BCES.Admin.Models.SiteModel>, (site, checkbox) =>
    {
        checkbox.Text = site.SiteName;
        checkbox.Value = site.SiteId.ToString();
        checkbox.Checked = Model.Contains(site.SiteId.ToString());
    })
)