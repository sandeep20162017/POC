@(Html.Kendo().MultiSelect()
    .Name("SiteIds") // Bind to SiteIds property
    .DataTextField("SiteName") // Display Site Names
    .DataValueField("SiteId") // Value is SiteId
    .BindTo((IEnumerable<SiteModel>)ViewData["Sites"]) // Bind available sites
    .Value(@Model.SiteIdsList) // Prepopulate with selected SiteIds
    .AutoBind(false)
)
