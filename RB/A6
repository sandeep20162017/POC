DECLARE @LinkCode VARCHAR(50) = '';  -- Declare parameter at top

SELECT 
    ISNULL(C.NAME, 'NONE') AS [ASSEMBLY AREA],
    ISNULL(A.COSTCENTRE, '0') AS [CC],
    ISNULL(SUM(A.COST), '0') AS [TOTAL COST],
    ISNULL(SUM(A.TAXCOST), '0') AS [TAXABLE COST]
FROM (
    SELECT 
        COSTCENTRE,
        (SBCES.FINAL_COST(PERCENTUSAGE, QTYREQD, MMSCOST, 0) - 
         SBCES.FINAL_COST(PERCENTUSAGE, QTYREQD, CORECOST, 0)) AS COST,
        SBCES.FINAL_COST(PERCENTUSAGE, QTYREQD, MMSCOST, 0) AS TAXCOST
    FROM 
        SBCES.SCPARTSUSED
    WHERE 
        LINKCODE = UPPER(@LinkCode)
        AND REBUILTPART = 'N'
        AND LINKTYPE = 'RB'
    UNION ALL
    SELECT 
        NSCP.COSTCENTRE,
        (SBCES.FINAL_COST(NSCP.PERCENTUSAGE, NSCP.QTYREQD, NSCOEM.OEMPARTCOST, 0) - 
         SBCES.FINAL_COST(NSCP.PERCENTUSAGE, NSCP.QTYREQD, NSCP.CORECOST, 0)) AS COST,
        SBCES.FINAL_COST(NSCP.PERCENTUSAGE, NSCP.QTYREQD, NSCOEM.OEMPARTCOST, 0) AS TAXCOST
    FROM 
        SBCES.NSCPARTSUSED NSCP
    LEFT JOIN 
        SBCES.NONSTOCKCODEDPARTS NSCOEM ON NSCOEM.ID = NSCP.ID
    WHERE 
        NSCP.LINKCODE = UPPER(@LinkCode)
        AND NSCP.LINKTYPE = 'RB'
) A
INNER JOIN 
    SBCES.COSTCENTRES C ON C.COSTCENTRE = A.COSTCENTRE
GROUP BY 
    A.COSTCENTRE, 
    C.NAME;
