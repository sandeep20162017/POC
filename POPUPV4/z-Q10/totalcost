Html.Kendo().Grid<BCES.Models.Parts.TotalCostInEstimates>()
                
                //.Name($"TotalCostInRbModelGrid")
                .Name($"TotalCostInRbModelGrid_{ViewBag.PartNum}")
                .Columns(columns =>
                {
                    columns.Bound(c => c.LinkCode).Title("Estimate #").Hidden();
                  
                    columns.Bound(c => c.MaterialTotalCostNoTax).Title("Materials Cost (Without Tax)").Format("{0:C2}");
                    columns.Bound(c => c.MaterialTotalTaxAmount).Title("Tax").Format("{0:C2}");
                    columns.Bound(c => c.MaterialTotalWithTax).Title("Material Cost (With Tax)").Format("{0:C2}");
                   
                    columns.Bound(c => c.LabourFringe).Title("Fringe").Format("{0:C2}");
                    columns.Bound(c => c.BlendedFringeBenefitPercent).Title("Blended Fringe & Benefit Percent").Format("{0:C2}");
                    columns.Bound(c => c.BlendedFringeBenefitCost).Title("Blended Fringe & Benefit Cost ").Format("{0:C2}");
                    columns.Bound(c => c.LabourOverhead).Title("Overhead").Format("{0:C2}");
                    columns.Bound(c => c.FinalLabourCost).Title("Final Labour Cost").Format("{0:C2}");
                    columns.Bound(c => c.TotalWithoutTax).Title("Total Without Tax").Format("{0:C2}");
                    columns.Bound(c => c.TotalWithTax).Title("Total With Tax").Format("{0:C2}");

