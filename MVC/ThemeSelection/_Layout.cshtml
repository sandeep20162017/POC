@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>

    <!-- Preloaded Kendo themes with only the default theme enabled initially -->
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/default/default-main.css" id="kendoThemeDefault" data-theme="default">
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/bootstrap/bootstrap-main.css" id="kendoThemeBootstrap" data-theme="bootstrap" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/bootstrap/bootstrap-dark.css" id="kendoThemeBootstrapDark" data-theme="bootstrap-dark" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/material/material-main.css" id="kendoThemeMaterial" data-theme="material" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/material/material-dark.css" id="kendoThemeMaterialDark" data-theme="material-dark" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/nordic/nordic-main.css" id="kendoThemeNordic" data-theme="nordic" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/ocean-blue/ocean-blue-main.css" id="kendoThemeOceanBlue" data-theme="ocean-blue" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/ocean-blue/ocean-blue-a11y.css" id="kendoThemeOceanBlueA11y" data-theme="ocean-blue-a11y" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/purple/purple-main.css" id="kendoThemePurple" data-theme="purple" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/blueopal/blueopal-main.css" id="kendoThemeBlueOpal" data-theme="blueopal" disabled>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/themes/10.0.1/highcontrast/highcontrast-main.css" id="kendoThemeHighContrast" data-theme="highcontrast" disabled>
</head>
<body>
    <!-- Navbar or header here -->
    <div class="container">
        @RenderBody()
    </div>

    <!-- Theme Selection Dropdown for all available themes -->
    <div class="theme-selector">
        <label for="themeSelector">Select Theme:</label>
        <select id="themeSelector">
            <option value="default">Main (Default)</option>
            <option value="bootstrap">Bootstrap</option>
            <option value="bootstrap-dark">Bootstrap Dark</option>
            <option value="material">Material</option>
            <option value="material-dark">Material Dark</option>
            <option value="nordic">Nordic</option>
            <option value="ocean-blue">Ocean Blue</option>
            <option value="ocean-blue-a11y">Ocean Blue A11Y</option>
            <option value="purple">Purple</option>
            <option value="blueopal">Blue Opal</option>
            <option value="highcontrast">High Contrast</option>
        </select>
    </div>

    <!-- jQuery for theme switching functionality -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            // Load the user's selected theme from local storage if available
            var selectedTheme = localStorage.getItem('selectedTheme') || 'default';
            $('#themeSelector').val(selectedTheme);

            // Apply the selected theme on page load
            applyTheme(selectedTheme);

            // Handle theme changes
            $('#themeSelector').change(function () {
                var theme = $(this).val();
                applyTheme(theme);
                localStorage.setItem('selectedTheme', theme);
            });
        });

        function applyTheme(theme) {
            // Disable all theme links
            $('link[data-theme]').prop('disabled', true);

            // Enable the selected theme link
            $('#kendoTheme' + capitalizeFirstLetter(theme)).prop('disabled', false);
        }

        // Helper function to capitalize the first letter of the theme name for matching IDs
        function capitalizeFirstLetter(string) {
            return string.charAt(0).toUpperCase() + string.slice(1);
        }
    </script>
</body>
</html>
