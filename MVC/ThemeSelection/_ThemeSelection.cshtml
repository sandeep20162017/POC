<div>
    <label for="themeSelector">Select Theme:</label>
    <select id="themeSelector">
        <option value="default-v2">Default</option>
        <option value="bootstrap-v4">Bootstrap</option>
        <option value="material-v2">Material</option>
        <!-- Add more themes as needed -->
    </select>
</div>

<script>
    $(document).ready(function () {
        // Load the user's selected theme from local storage if available
        var selectedTheme = localStorage.getItem('selectedTheme') || 'default-v2';
        $('#themeSelector').val(selectedTheme);

        // Apply the selected theme
        applyTheme(selectedTheme);

        // Handle theme change
        $('#themeSelector').change(function () {
            var theme = $(this).val();
            applyTheme(theme);
            localStorage.setItem('selectedTheme', theme);
        });
    });

    function applyTheme(theme) {
        // Remove existing theme classes
        $('head').find('link[href*="kendo"]').remove();

        // Add the selected theme
        var link = $('<link>', {
            rel: 'stylesheet',
            href: 'https://kendo.cdn.telerik.com/2023.2.606/styles/kendo.' + theme + '.min.css'
        });
        $('head').append(link);
    }
</script>