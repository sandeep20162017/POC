@* RoleDropdown.cshtml *@
<script id="role-dropdown-template" type="text/x-kendo-template">
    <select class="role-dropdown" data-bind="value: RoleName">
        @foreach (var role in ViewData["Roles"] as List<BCES.Pages.Admin.Role>)
        {
            <option value="@role.RoleId">@role.RoleName</option>
        }
    </select>
</script>