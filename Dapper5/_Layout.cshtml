<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My Application</title>

    <!-- Bootstrap CSS (optional for additional styling) -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Kendo UI CSS files -->
    <link href="https://kendo.cdn.telerik.com/2023.3.1012/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2023.3.1012/styles/kendo.default-v2.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2023.3.1012/styles/kendo.bootstrap-v4.min.css" rel="stylesheet" />
    
    <!-- Custom Site CSS -->
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <!-- Kendo UI Menu using Razor helper syntax -->
        @Html.Kendo().Menu()
            .Name("menu") <!-- Menu's HTML ID -->
            .Items(menu =>
            {
                menu.Add().Text("Manage Users")
                    .Action("Index", "ManageUser"); // Links to ManageUserController's Index action
            })

        <!-- Main Content Render Body -->
        <div class="mt-4">
            @RenderBody()
        </div>
    </div>

    <!-- jQuery (required for Kendo UI) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- Kendo UI JavaScript files -->
    <script src="https://kendo.cdn.telerik.com/2023.3.1012/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.3.1012/js/kendo.aspnetmvc.min.js"></script>
    
    <!-- Bootstrap JavaScript (optional) -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Site JavaScript -->
    <script src="~/js/site.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
