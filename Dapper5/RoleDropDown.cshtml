@model BCES.Models.Admin.RoleModel

@* Role selection dropdown list within the grid *@
@(Html.Kendo().DropDownList()
    .Name("RoleName")                        // The name matches the property in the model
    .DataTextField("RoleName")                // The text field to display
    .DataValueField("RoleId")                 // The value field to use
    .BindTo((IEnumerable<RoleModel>)ViewData["Roles"]) // Bind to a list of roles in ViewData
    .OptionLabel("Select Role")               // Placeholder text for dropdown
    .AutoBind(true)                           // Automatically fetch data on load
)
