@model List<BCES.Models.Parts.BusesModel> @* Add model directive *@

@(Html.Kendo().MultiSelect()
    .Name("ListOfBus")
    .DataTextField("Description")
    .DataValueField("ListId")
    .Placeholder("Select vehicle series...")
    .Value(Model) @* Bind selected items from the model *@
    .ValuePrimitive(false) @* Send full object (not just ID) *@
    .DataSource(source =>
    {
        source.Read(read => read.Url(Url.Action("GetVehicleSeries", "RebuiltParts")).Type(HttpVerbs.Get));
    })
)
