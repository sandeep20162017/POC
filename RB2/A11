command.Custom("Delete")
    .Click("showDeleteConfirmation")
    .Text(" ")
    .IconClass("k-icon k-i-delete")
    .HtmlAttributes(new {
        @class = "text-danger",
        title = "Delete",
        data_grid = "VehicleGrid",
        data_url = Url.Action("DeleteVehicle", "Vehicles"),
        data_id_field = "VehicleListId"
    });
