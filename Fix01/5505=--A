[HttpPost]
public async Task<IActionResult> AddVehiclesView([FromBody] VehicleViewModel vehicleViewModel)
{
    if (vehicleViewModel == null)
        return BadRequest("Unable to save. Model data is missing.");

    if (!ModelState.IsValid)
    {
        return BadRequest("Unable to save. Required fields are missing.");
    }

    try
    {
        // Save logic here
        await _vehicleService.AddAsync(vehicleViewModel);
        return Ok(new { message = "Vehicle added successfully." });
    }
    catch (Exception ex)
    {
        // Optional: log the exception
        return StatusCode(500, "An unexpected error occurred while saving the vehicle.");
    }
}
