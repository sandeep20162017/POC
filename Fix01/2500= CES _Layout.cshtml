@using System.IO
@{
    string version = "0.0.0.1";
    string filePath = "_Version.cshtml";

    if (System.IO.File.Exists(filePath))
    {
        string readText = System.IO.File.ReadAllText(filePath);
        if (readText.Length > 60)
        {
            version = readText.Substring(47, 16);
            if (version.Contains("0.0.0.0"))
            {
                version = "By Label";
            }
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Cost Estimation System</title>

    <!-- ================= BOOTSTRAP (match Document Review) ================= -->
    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" asp-append-version="true" />
    </environment>

    <!-- ================= KENDO UI (SINGLE VERSION) ================= -->
    <link rel="stylesheet" href="~/lib/kendo-ui/styles/bootstrap-dataviz-v4.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/kendo-ui/styles/font-icons/index.css" asp-append-version="true" />

    <!-- ================= APPLICATION CSS ================= -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/vehicle-estimate.css" asp-append-version="true" />

    <!-- ================= SCRIPTS ================= -->
    <script src="~/lib/jquery/jquery-3.7.1.min.js"></script>
    <script src="~/lib/kendo-ui/js/jszip.min.js"></script>
    <script src="~/lib/kendo-ui/js/kendo.all.min.js" asp-append-version="true"></script>
    <script src="~/lib/kendo-ui/js/kendo.aspnetmvc.min.js" asp-append-version="true"></script>
    <script src="~/lib/jquery/jquery.validate.min.js"></script>
    <script src="~/lib/jquery/jquery.validate.unobtrusive.min.js"></script>

    <environment names="Development">
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/lib/bootstrap/js/bootstrap.min.js"></script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>

    <!-- ================= MENU FIXES ================= -->
    <style>
        body, .k-widget, .k-grid, .k-menu, .k-button {
            font-size: 10px;
        }

        /* Force horizontal menu */
        .k-menu {
            display: flex !important;
            flex-direction: row !important;
        }

        .k-menu > .k-item {
            display: inline-flex;
            align-items: center;
        }

        /* Submenu positioning */
        .k-menu .k-group {
            position: absolute;
            background-color: #fff;
            border: 1px solid #ccc;
            z-index: 10000;
        }

        /* Remove expand arrows */
        .k-menu-expand-arrow {
            display: none !important;
        }

        /* Menu spacing */
        .k-menu .k-item > .k-link {
            padding: 6px 12px;
            font-size: 11px;
            font-weight: 500;
        }
    </style>
</head>

<body class="k-content">

    <!-- ================= HEADER (Document Review style) ================= -->
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid d-flex justify-content-between p-0">
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/ttclogo.png" alt="TTC Logo" />
                Cost Estimation System
            </a>
            <span class="navbar-text d-flex flex-column align-items-end">
                <span>
                    <span class="k-icon k-font-icon k-i-user mr-2"></span>
                    @ViewBag.UserName
                </span>
                <time>@DateTime.Now.ToString("dddd, MMM d, yyyy")</time>
            </span>
        </div>
    </nav>

    <!-- ================= CES MENU (UNCHANGED STRUCTURE) ================= -->
    <div id="menu-container" class="pl-2 pt-2">
        @(Html.Kendo().Menu()
            .Name("Menu")
            .HtmlAttributes(new { @class = "rounded-menu" })
            .Items(items =>
            {
                items.Add().Text("Home").Action("Index", "Home").ImageUrl(Url.Content("~/images/home.png"));

                items.Add().Text("Material Parts").ImageUrl(Url.Content("~/images/part.png"))
                    .Items(children =>
                    {
                        children.Add().Text("Stock Coded Parts").Action("Index", "StockCodedParts");
                        children.Add().Text("Non Stock Coded Parts").Action("NscPartsUsedIndex", "NscPartsUsed");
                        children.Add().Text("Rebuilt Parts").Action("RebuiltPartsIndex", "RebuiltParts");
                    });

                items.Add().Text("Vehicle Estimate").ImageUrl(Url.Content("~/images/vehicle.png"))
                    .Items(children =>
                    {
                        children.Add().Text("Vehicles").Action("VehiclesIndex", "Vehicles");
                        children.Add().Text("Archived Estimates").Action("ArchivedIndex", "Vehicles");
                    });

                items.Add().Text("Make Vs Buy").ImageUrl(Url.Content("~/images/part.png"))
                    .Items(children =>
                    {
                        children.Add().Text("Make vs Buy").Action("MakeVsBuyIndex", "MakeVsBuy");
                        children.Add().Text("Archived Estimates").Action("ArchivedIndex", "MakeVsBuy");
                    });

                items.Add().Text("Reports").Action("Index", "Common");

                items.Add().Text("Administration").ImageUrl(Url.Content("~/images/part.png"))
                    .Items(children =>
                    {
                        children.Add().Text("User Management").Action("Index", "UserManagementGrid");
                        children.Add().Text("Labour Task Management").Action("Index", "Task");
                        children.Add().Text("Differential Management").Action("DifferentialIndex", "Differential");
                        children.Add().Text("Engine Management").Action("EngineIndex", "Engine");
                        children.Add().Text("Make Model Year Management").Action("MakeModelYearIndex", "MakeModelYear");
                        children.Add().Text("Transmission Management").Action("TransmissionIndex", "Transmission");
                        children.Add().Text("Employee Salary Management").Action("EmpSalaryIndex", "EmpSalary");
                        children.Add().Text("Labour Type Management").Action("LabourTypeIndex", "LabourType");
                        children.Add().Text("List Of Vehicles").Action("Index", "Bus");
                        children.Add().Text("Change Settings").Action("SettingIndex", "Setting");
                        children.Add().Text("Announcement Settings").Action("Index", "Content");
                    });

                items.Add().Text("Help").Action("Index", "Common");
            })
        )
    </div>

    <!-- ================= MAIN CONTENT ================= -->
    <main>
        <div class="container-fluid" id="main-content">
            @RenderBody()
        </div>
    </main>

    <!-- ================= FOOTER (Document Review style) ================= -->
    <footer class="footer text-center d-flex align-items-center">
        <div class="container-fluid text-left">
            <p class="text-muted">System Number: 0105</p>
        </div>
        <div class="container-fluid">
            <p class="text-muted">
                Copyright Â© @DateTime.Now.Year Toronto Transit Commission.
            </p>
        </div>
        <div class="container-fluid text-right">
            <p class="text-muted">Build Version: @version</p>
        </div>
    </footer>

    @RenderSection("scripts", required: false)

</body>
</html>
