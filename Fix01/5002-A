/* make sure the icon can be transformed */
.k-grid th.k-filtered .k-i-filter,
.k-grid th.k-filtered .k-icon,
.k-grid th.k-filtered .k-svg-icon,
.k-grid th.k-filtered .k-grid-filter,
.k-grid th.k-filtered .k-header-menu.k-grid-filter,
.k-grid th.k-filtered button.k-button .k-icon,
.k-grid th.k-filtered button.k-button svg {
    display: inline-block !important;         /* allow transforms */
    transform-origin: center center !important;
    will-change: transform, opacity !important;
    color: #0078d7 !important;                /* highlight color */
    fill: #0078d7 !important;                 /* for svg */
}

/* subtle pulse */
.k-grid th.k-filtered .k-animated-filter {
    animation: filterPulse 0.9s ease-in-out infinite alternate;
}

@keyframes filterPulse {
    from { transform: scale(1);    opacity: 1; }
    to   { transform: scale(1.18); opacity: 0.9; }
}

/* fallback: if icon classes are not the child, allow applying to SVG directly */
.k-grid th.k-filtered svg.k-animated-filter {
    transform-box: fill-box; /* helps some SVGs respect transform-origin */
    transform-origin: center center;
}
