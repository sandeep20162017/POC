@(Html.Kendo().MultiSelect()
    .Name("BusId")
    .DataTextField("BusName")
    .DataValueField("BusId")
    .Filter("contains")
    .AutoBind(true)
    .Value(Model.BusIdsList)
    .DataSource(ds =>
    {
        ds.Read(r => r.Action("ReadBuses", "RebuiltParts"));
    })
    .Enable(Model.RebuiltId == 0)   // ‚Üê NEW RECORD: enabled; EDIT: disabled
)
