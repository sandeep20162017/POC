}
@(Html.Kendo().ComboBox()
    .Name(fieldName)
    .DataTextField("Text")
    .DataValueField("Text")
    .Filter("contains")
    .ClearButton(false)
    
    .Placeholder("Enter Supplier Number...")
    .AutoBind(false)
    .Events(events =>
    {
        events.Change
        ...
