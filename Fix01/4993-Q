Instead of  @readonly = !isNew ? "readonly" : null would like to try
.Enable(isNew)   //  NEW RECORD: enabled; EDIT: disabled

  @Html.LabelFor(m => m.JobNumber, "Job Number", new { @class = "form-label" })
  @Html.EditorFor(m => m.JobNumber, new {
      @class = "vehicle-form-control",
      @readonly = !isNew ? "readonly" : null
  })
