@model string

@(Html.Kendo().AutoComplete()
    .Name(ViewData.TemplateInfo.HtmlFieldPrefix) // Ensures the input's name matches the column field name
    .DataSource(source => source
        .Read(read => read.Action("GetSuggestions", "Task")) // Provide the data for suggestions
    )
    .Filter("startswith")
    .Placeholder("Type to search...")
    .HtmlAttributes(new { id = ViewData.TemplateInfo.HtmlFieldPrefix }) // Ensures the ID is set dynamically
)
