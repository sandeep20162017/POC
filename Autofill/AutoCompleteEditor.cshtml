@model string

@(Html.Kendo().AutoComplete()
    .Name(ViewData.TemplateInfo.HtmlFieldPrefix) // Dynamic name based on the field
    .DataTextField("Text")
    .Filter("contains")
    .Placeholder("Type to search...")
    .DataSource(source =>
    {
        source.Read(read =>
        {
            read.Action("GetAutoCompleteData", "Common") // Common controller action
                .Data("onAdditionalData"); // Pass additional data (e.g., column name)
        })
        .ServerFiltering(true);
    })
)

<script>
    function onAdditionalData() {
        // Get the column name dynamically
        var columnName = "@ViewData.ModelMetadata.PropertyName";

        return {
            columnName: columnName,
            searchText: $("#" + columnName).data("kendoAutoComplete").value()
        };
    }
</script>
