@model IEnumerable<BCES.Models.Admin.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

@(Html.Kendo().Grid<BCES.Models.Admin.UserViewModel>()
    .Name("userGrid")
    .Columns(columns =>
    {
        columns.Bound(u => u.UserName).Title("User Name");
        columns.Bound(u => u.RoleModel.RoleName) // Updated to ensure we bind RoleModel correctly
            .Title("Role Name")
            .EditorTemplateName("RoleDropDown"); // Uses the custom dropdown template for role selection

        columns.Command(command =>
        {
            command.Edit();
            command.Destroy();
        }).Title("Actions");
    })
    .ToolBar(toolbar => toolbar.Create()) // Toolbar button to add a new row
    .Editable(editable => editable.Mode(GridEditMode.InLine)) // Sets grid to inline editing mode
    .Pageable()
    .Sortable()
    .Scrollable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Url(Url.Action("ReadUsers", "UserManagementGrid")).Type(HttpVerbs.Get))
        .Create(create => create.Url(Url.Action("UserViewAdd", "UserManagementGrid")).Type(HttpVerbs.Post))
        .Update(update => update.Url(Url.Action("UpdateUser", "UserManagementGrid")).Type(HttpVerbs.Post))
        .Destroy(delete => delete.Url(Url.Action("DeleteUser", "UserManagementGrid")).Type(HttpVerbs.Post))
        .Model(model =>
        {
            model.Id(u => u.UserId);
            model.Field(u => u.UserName).Editable(true);
            model.Field(u => u.RoleModel).DefaultValue(new RoleModel { RoleId = 0, RoleName = "Select Role" }); // Default RoleModel for new entries
            model.Field(u => u.RoleModel.RoleId).Editable(true);
            model.Field(u => u.RoleModel.RoleName).Editable(true);
        })
        .Events(events => events.Error("errorHandler"))
    )
)

@section Scripts {
    <script>
        $(document).ready(function () {
            var grid = $("#userGrid").data("kendoGrid");

            grid.bind("edit", function (e) {
                // Ensure RoleModel is initialized for new records
                if (e.model.isNew() && !e.model.RoleModel) {
                    e.model.set("RoleModel", { RoleId: 0, RoleName: "Select Role" });
                }
            });

            // Function to handle role dropdown change and update RoleModel in the grid
            function onRoleChange(e) {
                var selectedRoleId = this.value(); // Get selected RoleId
                var selectedRoleName = this.text(); // Get selected RoleName

                // Get the current model being edited and set RoleModel properties
                var currentModel = $("#userGrid").data("kendoGrid").dataItem($(e.sender.element).closest("tr"));
                currentModel.set("RoleModel.RoleId", selectedRoleId);
                currentModel.set("RoleModel.RoleName", selectedRoleName);
            }

            // Error handler function for more detailed error messages
            function errorHandler(e) {
                if (e.errors) {
                    var message = "Errors:\n";
                    $.each(e.errors, function (key, value) {
                        if ('errors' in value) {
                            $.each(value.errors, function () {
                                message += this + "\n";
                            });
                        }
                    });
                    alert(message);
                }
            }
        });
    </script>
}
