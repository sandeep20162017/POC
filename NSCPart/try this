/* Highlight the row being edited */
.k-grid-edit-row {
    background-color: #fafafa !important;
    transition: background-color 0.2s ease;
}

/* Highlight editable cells */
.k-edit-cell {
    background-color: #ffffe0 !important;
    border: 1px solid #ccc !important;
}
