@model int

@(Html.Kendo().DropDownList()
    .Name("RoleId")
    .DataTextField("RoleName")
    .DataValueField("RoleId")
    .BindTo((IEnumerable<BCES.Models.Admin.RoleModel>)ViewData["Roles"])
    .OptionLabel("Select Role")
    .HtmlAttributes(new { 
        required = "required",
        "data-role-required" = "true",
        "data-val-msg-container" = "#roleValidationMessage"
    })
    .Events(e => e.Change("onRoleChange"))
)

<span id="roleValidationMessage" class="k-invalid-msg"></span>
