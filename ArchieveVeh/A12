$(document).ready(function () {
    var grid = $("#RbPartsMaterialDetailsRebuiltPartsGrid").data("kendoGrid");
    var saveButton = grid.wrapper.find(".k-grid-save-changes");
    saveButton.prop("disabled", true).addClass("k-button-disabled");
});
