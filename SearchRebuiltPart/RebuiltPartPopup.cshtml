@model BCES.Models.Parts.RebuildPartsModel

@(Html.Kendo().Form<BCES.Models.Parts.RebuildPartsModel>()
    .Name("rebuiltPartForm")
    .HtmlAttributes(new { action = Url.Action("AddPart", "Parts"), method = "POST" })
    .Validatable(v =>
    {
        v.ValidateOnBlur(true);
        v.ValidationSummary(vs => vs.Enable(true));
    })
    .Items(items =>
    {
        items.AddGroup()
            .Label("Rebuilt Part Details")
            .Items(i =>
            {
                i.Add()
                    .Field(f => f.MMSStockCode)
                    .Label(l => l.Text("MMS Stock Code:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.MMSStockCode))</text>);
                i.Add()
                    .Field(f => f.StockPartDescription)
                    .Label(l => l.Text("Stock Part Description:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.StockPartDescription))</text>);
                i.Add()
                    .Field(f => f.StockPartKeyword)
                    .Label(l => l.Text("Stock Part Keyword:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.StockPartKeyword))</text>);
                i.Add()
                    .Field(f => f.Quantity)
                    .Label(l => l.Text("Quantity:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().NumericTextBoxFor(m => m.Quantity))</text>);
                i.Add()
                    .Field(f => f.CoreCost)
                    .Label(l => l.Text("Core Cost:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().NumericTextBoxFor(m => m.CoreCost))</text>);
                i.Add()
                    .Field(f => f.RebuiltStockCode)
                    .Label(l => l.Text("Rebuilt Stock Code:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.RebuiltStockCode))</text>);
                i.Add()
                    .Field(f => f.RebuiltPartDescription)
                    .Label(l => l.Text("Rebuilt Part Description:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.RebuiltPartDescription))</text>);
                i.Add()
                    .Field(f => f.RebuiltPartKeyword)
                    .Label(l => l.Text("Rebuilt Part Keyword:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.RebuiltPartKeyword))</text>);
                i.Add()
                    .Field(f => f.JobNumber)
                    .Label(l => l.Text("Job Number:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.JobNumber))</text>);
                i.Add()
                    .Field(f => f.CoreCode)
                    .Label(l => l.Text("Core Code:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.CoreCode))</text>);
                i.Add()
                    .Field(f => f.RebuiltPartCoreCost)
                    .Label(l => l.Text("Rebuilt Part Core Cost:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().NumericTextBoxFor(m => m.RebuiltPartCoreCost))</text>);
                i.Add()
                    .Field(f => f.SOPNumber)
                    .Label(l => l.Text("SOP Number:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.SOPNumber))</text>);
                i.Add()
                    .Field(f => f.BusSeriesCode)
                    .Label(l => l.Text("Bus Series Code:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.BusSeriesCode))</text>);
                i.Add()
                    .Field(f => f.BusSeriesDescription)
                    .Label(l => l.Text("Bus Series Description:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.BusSeriesDescription))</text>);
                i.Add()
                    .Field(f => f.PartTypeName)
                    .Label(l => l.Text("Part Type Name:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.PartTypeName))</text>);
                i.Add()
                    .Field(f => f.CostCentreCode)
                    .Label(l => l.Text("Cost Centre Code:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.CostCentreCode))</text>);
                i.Add()
                    .Field(f => f.CostCentreDescription)
                    .Label(l => l.Text("Cost Centre Description:"))
                    .EditorTemplateHandler(@<text>@(Html.Kendo().TextBoxFor(m => m.CostCentreDescription))</text>);
            });
    })
)

<div class="k-form-buttons">
    <button type="submit" class="k-button k-primary">Add</button>
    <button type="button" class="k-button" onclick="closeForm()">Cancel</button>
</div>

<script>
    function closeForm() {
        $("#rebuiltPartForm").closest(".k-window").data("kendoWindow").close();
    }
</script>