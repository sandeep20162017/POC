            <div class="col-md-2 form-group">
                <label>SOP Number</label>
                @(Html.Kendo().TextBox()
                    .Name("Sopnumber")
                    .Value(Model?.Sopnumber ?? "")
                    .HtmlAttributes(new { @readonly = isReadOnly ? "readonly" : null, style = "width:100%" }))
