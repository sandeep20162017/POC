function initVehicleEstimateTabs() {
    var tabStripElement = $("#vehicleTabStrip");
    var existing = tabStripElement.data("kendoTabStrip");
    if (existing) {
        existing.destroy();
        tabStripElement.empty();
    }

    tabStripElement.kendoTabStrip({
        activate: function (e) {
            var tabName = $(e.item).data("tab-name");
            loadTabContent(tabName, tabActions);
        }
    });

    // Load first tab
    loadTabContent("vehicle", tabActions);
}
