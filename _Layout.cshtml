<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyApp</title>
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2023.2.606/styles/kendo.common.min.css" />
    <link rel="stylesheet" href="https://kendo.cdn.telerik.com/2023.2.606/styles/kendo.material.min.css" /> <!-- Add this line for Material theme -->
    <link rel="stylesheet" href="~/css/styles.css" />
</head>
<body>
    <header>
        <div class="header-container">
            <div class="logo">
                <img src="~/images/logo.png" alt="Logo" />
            </div>
            <div class="user-info">
                <img src="~/images/user.jpg" alt="User" class="user-image" />
                <span class="user-name">@User.Identity.Name</span>
                <span class="date-time">@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")</span>
            </div>
        </div>
    </header>

    <div class="menu-container">
        @(Html.Kendo().Menu()
            .Name("mainMenu")
            .Items(items =>
            {
                items.Add().Text("Home").Url("~/Home.cshtml");
                items.Add().Text("Parts").Items(subItems =>
                {
                    subItems.Add().Text("Add Parts").Url("~/Parts/AddParts.cshtml");
                });
                items.Add().Text("Vehicle").Url("~/Vehicle.cshtml");
                items.Add().Text("Buy or Make").Url("~/BuyOrMake.cshtml");
                items.Add().Text("Admin").Url("~/Admin.cshtml");
            })
            .HighlightPath(true)
            .Orientation(MenuOrientation.Horizontal)
            .HtmlAttributes(new { @class = "rounded-menu" })
            )
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="footer-container">
            <div class="footer-left">
                &copy; 2023 - MyApp
            </div>
            <div class="footer-right">
                Build Number: @ViewData["BuildNumber"] | Build Date: @ViewData["BuildDate"] | Version: @ViewData["Version"]
            </div>
        </div>
    </footer>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2023.2.606/js/kendo.all.min.js"></script>
    <script src="~/js/scripts.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
