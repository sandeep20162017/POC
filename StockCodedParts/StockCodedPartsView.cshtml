@model IEnumerable<YourNamespace.Models.StockCodedParts>

@{
    ViewData["Title"] = "Stock Coded Parts";
}

<h2>@ViewData["Title"]</h2>

@(Html.Kendo().Grid<YourNamespace.Models.StockCodedParts>()
    .Name("StockCodedPartsGrid")
    .Columns(columns =>
    {
        columns.Bound(p => p.PartId).Title("Part ID");
        columns.Bound(p => p.OrigSuppNum).Title("Orig Supp Num");
        columns.Bound(p => p.OrigSupplierName).Title("Orig Supplier Name");
        columns.Bound(p => p.CostCentre).Title("Cost Centre");
        columns.Bound(p => p.QtyReqd).Title("Qty Reqd");
        columns.Bound(p => p.PercentUsage).Title("Percent Usage");
        columns.Bound(p => p.DateEntered).Title("Date Entered").Format("{0:yyyy-MM-dd HH:mm:ss}");
        columns.Bound(p => p.EnteredBy).Title("Entered By");
        columns.Bound(p => p.LastModifiedBy).Title("Last Modified By");
        columns.Bound(p => p.LastModifiedDate).Title("Last Modified Date").Format("{0:yyyy-MM-dd HH:mm:ss}");
        columns.Bound(p => p.LinkCode).Title("Link Code");
        columns.Bound(p => p.Cost).Title("Cost").Format("{0:C}");
        columns.Bound(p => p.LinkType).Title("Link Type");
        columns.Bound(p => p.CoreCost).Title("Core Cost").Format("{0:C}");
        columns.Bound(p => p.MmsStockCode).Title("MMS Stock Code");
        columns.Bound(p => p.OtherStockCodedPartsColumns).Title("Other Columns");
        columns.Bound(p => p.CorePartNumber).Title("Core Part Number");
        columns.Bound(p => p.PartType).Title("Part Type");
        columns.Bound(p => p.JobNumber).Title("Job Number");
        columns.Bound(p => p.DetailedDesc).Title("Detailed Desc");
        columns.Bound(p => p.ItemRefNumber).Title("Item Ref Number");
        columns.Bound(p => p.OverheadType).Title("Overhead Type");
        columns.Bound(p => p.CoreCharge).Title("Core Charge");
        columns.Bound(p => p.PartCost).Title("Part Cost");
        columns.Bound(p => p.MmsNewCost).Title("MMS New Cost").Format("{0:C}");
        columns.Bound(p => p.OemPartCost).Title("OEM Part Cost");
        columns.Bound(p => p.MmsSyncDate).Title("MMS Sync Date").Format("{0:yyyy-MM-dd HH:mm:ss}");
    })
    .Pageable()
    .Sortable()
    .Filterable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("GetStockCodedParts", "StockCodedParts"))
    )
)