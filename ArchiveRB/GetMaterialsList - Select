DECLARE @viIDnum VARCHAR(4000) = 'test123';
DECLARE @viType VARCHAR(4000) = 'BUS';
DECLARE @VFinalPrice DECIMAL(20,2);

-- Diagnostic: Show raw inputs
SELECT 
    @viIDnum AS InputID,
    @viType AS InputType;

WITH MaterialCost AS (
    SELECT
        ISNULL(C.Name,'NONE') AS AssemblyArea,
        ISNULL(A.CostCentre, '0') AS CostCentre,
        A.PercentUsage,
        A.QtyReqd,
        A.MmsCost,
        A.CoreCost,
        [SBCES].[FinalCost](A.PercentUsage, A.QtyReqd, A.MmsCost, 0) AS RawFinalCost,
        SUM(A.Cost) AS TotalCost,
        SUM(A.TaxCost) AS TaxableCost
    FROM (
        SELECT 
            CostCentre,
            PercentUsage,
            QtyReqd,
            MmsCost,
            CoreCost,
            CONVERT(DECIMAL(10,2),
                [SBCES].[FinalCost](PercentUsage, QtyReqd, MmsCost, 0) 
                - [SBCES].[FinalCost](PercentUsage, QtyReqd, CoreCost, 0)
            ) AS Cost,
            CONVERT(DECIMAL(10,2),
                [SBCES].[FinalCost](PercentUsage, QtyReqd, MmsCost, 0)
            ) AS TaxCost
        FROM 
            SBCES.ScPartsUsed
        WHERE 
            LinkCode = UPPER(@viIDnum)
            AND RebuiltPart = 'N'
            AND LinkType = UPPER(@viType)
        UNION ALL
        SELECT 
            NSU.CostCentre,
            NSU.PercentUsage,
            NSU.QtyReqd,
            NSCP.OemPartCost,
            NSU.CoreCost,
            CONVERT(DECIMAL(10,2),
                [SBCES].[FinalCost](NSU.PercentUsage, NSU.QtyReqd, NSCP.OemPartCost, 0) 
                - [SBCES].[FinalCost](NSU.PercentUsage, NSU.QtyReqd, NSU.CoreCost, 0)
            ) AS Cost,
            CONVERT(DECIMAL(10,2),
                [SBCES].[FinalCost](NSU.PercentUsage, NSU.QtyReqd, NSCP.OemPartCost, 0)
            ) AS TaxCost
        FROM 
            SBCES.NscPartsUsed NSU
        RIGHT JOIN SBCES.NonStockCodedParts NSCP 
            ON NSCP.Id = NSU.Id
        WHERE 
            NSU.LinkCode = UPPER(@viIDnum)
            AND NSU.LinkType = UPPER(@viType)
    ) A
    JOIN SBCES.CostCentres C 
        ON C.CostCentre = A.CostCentre
    GROUP BY A.CostCentre, C.Name, A.PercentUsage, A.QtyReqd, A.MmsCost, A.CoreCost
)

-- Diagnostic: Show FinalCost inputs/outputs
SELECT 
    'MaterialCost' AS Source,
    PercentUsage,
    QtyReqd,
    MmsCost,
    CoreCost,
    RawFinalCost,
    TotalCost,
    TaxableCost
FROM MaterialCost;

WITH KitCost AS (
    SELECT 
        CASE 
            WHEN UPPER(@viType) = 'BUS' 
            THEN ISNULL(TotalKitCost, 0)
            ELSE 0 
        END AS KitTotal
    FROM SBCES.OemKitsTotal2 
    WHERE Link = @viIDnum)
)

-- Diagnostic: Show kit cost
SELECT 
    'KitCost' AS Source,
    KitTotal
FROM KitCost;

SELECT 
    @VFinalPrice = ROUND(
        ISNULL(SUM(MaterialCost.TotalCost), 0) 
        + ISNULL(MAX(KitCost.KitTotal), 0),
        2
    )
FROM MaterialCost, KitCost;

-- Final diagnostic output
SELECT 
    @VFinalPrice AS FinalMaterialPrice,
    [SBCES].[FinalCost](100, 1, 100, 0) AS TestFinalCost1,  -- Should return 100
    [SBCES].[FinalCost](50, 2, 200, 0) AS TestFinalCost2;   -- Should return 200
