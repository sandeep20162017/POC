DECLARE @viIDnum VARCHAR(4000) = 'your_value';
DECLARE @viType VARCHAR(4000) = 'your_value';
DECLARE @VFinalPrice DECIMAL(20,2);

WITH MaterialCost AS (
    SELECT
        ISNULL(C.Name,'NONE') AS AssemblyArea,
        ISNULL(A.CostCentre, '0') AS CostCentre,
        SUM(A.Cost) AS TotalCost,
        SUM(A.TaxCost) AS TaxableCost
    FROM (
        SELECT 
            CostCentre,
            CONVERT(DECIMAL(10,2),[SBCES].[FinalCost](PercentUsage, QtyReqd, MmsCost, 0) 
              - CONVERT(DECIMAL(10,2),[SBCES].[FinalCost](PercentUsage, QtyReqd, CoreCost, 0) AS Cost,
            CONVERT(DECIMAL(10,2),[SBCES].[FinalCost](PercentUsage, QtyReqd, MmsCost, 0) AS TaxCost
        FROM 
            SBCES.ScPartsUsed
        WHERE 
            LinkCode = UPPER(@viIDnum)
            AND RebuiltPart = 'N'
            AND LinkType = UPPER(@viType)
        UNION ALL
        SELECT 
            NSU.CostCentre,
            CONVERT(DECIMAL(10,2),[SBCES].[FinalCost](NSU.PercentUsage, NSU.QtyReqd, NSCP.OemPartCost, 0) 
              - CONVERT(DECIMAL(10,2),[SBCES].[FinalCost](NSU.PercentUsage, NSU.QtyReqd, NSU.CoreCost, 0) AS Cost,
            CONVERT(DECIMAL(10,2),[SBCES].[FinalCost](NSU.PercentUsage, NSU.QtyReqd, NSCP.OemPartCost, 0) AS TaxCost
        FROM 
            SBCES.NscPartsUsed NSU
        RIGHT JOIN SBCES.NonStockCodedParts NSCP ON NSCP.Id = NSU.Id
        WHERE 
            NSU.LinkCode = UPPER(@viIDnum)
            AND NSU.LinkType = UPPER(@viType)
    ) A
    JOIN SBCES.CostCentres C ON C.CostCentre = A.CostCentre
    GROUP BY A.CostCentre, C.Name
),
RebuiltParts AS (
    SELECT DISTINCT 
        UPPER(SU.LinkCode) AS LinkCode,
        SU.QtyReqd AS Qty,
        SU.PercentUsage AS UsagePercent,
        SU.MmsRebuiltCode AS RebuiltCode
    FROM 
        SBCES.ScPartsUsed SU
    WHERE 
        RebuiltPart = 'Y'
        AND LinkType = UPPER(@viType)
        AND UPPER(LinkCode) = UPPER(@viIDnum)
),
KitCost AS (
    SELECT 
        CASE 
            WHEN UPPER(@viType) = 'BUS' 
            THEN ISNULL(TotalKitCost, 0)
            ELSE 0 
        END AS KitTotal
    FROM SBCES.OemKitsTotal2 
    WHERE Link = @viIDnum
)
SELECT 
    @VFinalPrice = ROUND(
        ISNULL(SUM(MaterialCost.TotalCost), 0) + 
        ISNULL(MAX(KitCost.KitTotal), 0),
        2
    )
FROM MaterialCost
CROSS JOIN KitCost;

SELECT @VFinalPrice AS FinalMaterialPrice;
