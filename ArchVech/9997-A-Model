using System;
using System.Collections.Generic;

namespace BCES.Models.ArchVehicle
{
    // Root aggregate for convenience
    public class ArchVehicle
    {
        public ArchVehicleList Master { get; set; }
        public IEnumerable<ScPartUsed> ScPartsUsed { get; set; }
        public IEnumerable<NscPartUsed> NscPartsUsed { get; set; }
        public IEnumerable<EmployeeLabour> EmployeeLabours { get; set; }
        public IEnumerable<LabourCcTotal> LabourCcTotals { get; set; }
        public IEnumerable<MaterialsCcTotal> MaterialsCcTotals { get; set; }
    }

    // === Master List ===
    public class ArchVehicleList
    {
        public int ArchVehicleListId { get; set; }
        public string VehSeriesCode { get; set; }
        public string NumOfVehicles { get; set; }
        public string ProjDesc { get; set; }
        public DateTime? DateEntered { get; set; }
        public string EnteredBy { get; set; }
        public string Make { get; set; }
        public string Model { get; set; }
        public string Year { get; set; }
        public string Engine { get; set; }
        public string Transmission { get; set; }
        public string Differential { get; set; }
        public decimal LabourCost { get; set; }
        public decimal LabourOverheadAmount { get; set; }
        public decimal LabourTotal { get; set; }
        public decimal MaterialsTotal { get; set; }
        public decimal TotalBusEstimateCost { get; set; }
        public decimal? TotalTax { get; set; }
        public decimal? TotalCostTax { get; set; }
        public decimal OemKitsTotal { get; set; }
        public string Sopnumber { get; set; }
        public int? OldId { get; set; }
    }

    // === SC Parts Used (Service Centre) ===
    public class ScPartUsed
    {
        public string MmsStockCode { get; set; }
        public DateTime? DateEntered { get; set; }
        public decimal? RebPartCost { get; set; }
        public string UserEntered { get; set; }
        public decimal? MmsCost { get; set; }
        public decimal? OemCost { get; set; }
        public string MmsRebuiltCode { get; set; }
        public string CostCentre { get; set; }
        public string QtyReqd { get; set; }
        public string PercentUsage { get; set; }
        public string LinkCode { get; set; }
        public string RebuiltPart { get; set; }   // 'Y' or 'N'
        public string LinkType { get; set; }
        public decimal? Corecost { get; set; }
        public decimal? TotalCost { get; set; }
        public string ScKeyword { get; set; }
        public string ScDescription { get; set; }
    }

    // === NSC Parts Used (Non-Service Centre) ===
    public class NscPartUsed
    {
        public string OrigSuppNum { get; set; }
        public string OrigSupplierName { get; set; }
        public string CostCentre { get; set; }
        public string QtyReqd { get; set; }
        public string PercentUsage { get; set; }
        public DateTime? DateEntered { get; set; }
        public string EnteredBy { get; set; }
        public string LinkCode { get; set; }
        public decimal? Cost { get; set; }
        public string LinkType { get; set; }
        public decimal? Corecost { get; set; }
        public decimal? TotalCost { get; set; }
    }

    // === Employee Labour ===
    public class EmployeeLabour
    {
        public int Id { get; set; }
        public string LabourDefn { get; set; }
        public DateTime? DateEntered { get; set; }
        public string LinkNumber { get; set; }
        public string TypeId { get; set; }
        public string Costcentre { get; set; }
        public string Task { get; set; }
        public string LabourType { get; set; }
        public string Usage { get; set; }
        public string HrsReqd { get; set; }
        public string AdjHrs { get; set; }
        public decimal? TimeAddition { get; set; }
    }

    // === Labour Cost Centre Totals ===
    public class LabourCcTotal
    {
        public string CostCentre { get; set; }
        public decimal? TotalHours { get; set; }
    }

    // === Materials Cost Centre Totals ===
    public class MaterialsCcTotal
    {
        public string CostCentre { get; set; }
        public decimal? TotalCost { get; set; }
    }
}
