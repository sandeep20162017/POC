@(Html.Kendo().Grid(Model.LabourCcTotals)
    .Name("labourTotalsGrid")
    .Columns(columns =>
    {
        columns.Bound(t => t.CostCentre).Title("Cost Centre");
        columns.Bound(t => t.TotalHours).Title("Total Hours").Format("{0:n2}");
    })
    .Scrollable(s => s.Height("80px"))
)
