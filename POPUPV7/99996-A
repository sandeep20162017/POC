function onGridDataBound(e) {
    var grid = e.sender;
    var pageSize = grid.dataSource.pageSize();
    var skip = grid.dataSource.skip();
    var currentPage = Math.floor(skip / pageSize) + 1;
    var totalPages = Math.ceil(grid.dataSource.total() / pageSize);

    var pagerInfo = grid.wrapper.find(".k-pager-info");
    pagerInfo.text("Page " + currentPage + " of " + totalPages);
}
